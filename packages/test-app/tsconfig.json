{
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "disableSizeLimit": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "es2022",
    "types": ["vitest/globals", "node"],
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["./test/**/*.ts", "./vitest.config.ts"],
  "exclude": ["node_modules", "dist", "libs"]
}